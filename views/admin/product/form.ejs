<%- include('../../partials/html_header') %>
<link rel="stylesheet" href='/css/admin-side-column.css'>
<link rel="stylesheet" href='/css/registrar-producto.css'>

<title>BW Blairwalf | <%= title %>></title>
</head>

<body>
    <%- include('../../partials/header') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('../../partials/side-column') %>

            <div class="col-sm-8 col-md-9">
                <p class="centrar"><%= title.toUpperCase() %>></p>
                <form action="/admin/product/<%= product.id %><%= urlForm %>" method="post"
                    enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="category">Categoría</label>
                        <div class="icon-select">
                            <i class="fas fa-sort-down"></i>

                            <select name="category" id="category" class="form-control">
                                <% for(const category of categories){ %>
                                <option value="<%= category.id %>"><%= category.name %></option>
                                <% } %>
                            </select>
                        </div>
                        <p class="centrar"><small>No está la categoría que buscas? <a href="/admin/categoria"> click
                                    aquí</a></small></p>
                    </div>
                    <div class="form-group">
                        <label for="title">Nombre de la prenda</label>
                        <input type="text" name="title" id="title" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="description">Detalle</label>
                        <textarea name="description" id="description" cols="30" rows="10"
                            class="form-control"></textarea>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-4">
                            <label for="color">Color</label>
                            <input type="text" name="color" id="color" class="form-control">
                        </div>
                        <div class="col-sm-4">
                            <label for="price">Precio</label>
                            <input type="number" name="price" id="price" class="form-control" value="0" min="0">
                        </div>
                        <div class="col-sm-4">
                            <label for="provider">Proveedor</label>
                            <div class="icon-select">
                                <i class="fas fa-sort-down"></i>
                                <select name="provider" id="provider" class="form-control">
                                    <option value="" selected>Seleccione una opcion</option>
                                    <% for(const provider of providers){ %>
                                    <option value="<%= provider.id %>"><%= provider.name %></option>
                                    <% } %>

                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label for="brand">Marca</label>
                            <div class="icon-select">
                                <i class="fas fa-sort-down"></i>
                                <select name="brand" id="brand" class="form-control">
                                    <option value="" selected>Seleccione una opcion</option>
                                    <% for(const brand of brands) {%>
                                    <option value="<%= brand.id %>"><%= brand.name %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row-fluid">
                        <div>
                            <p class="centrar">TALLES</p>
                        </div>
                    </div>
                    <div class="form-row">
                        <% for(const size of sizes){ %>
                        <div class="col-sm-4">
                            <label for="size">Talle: <%= size.name %></label>
                            <input type="number" name="size[][<%= size.id %>]" id="size" class="form-control" value="0"
                                min="0" max="99">
                        </div>
                        <% } %>

                    </div>

                    <hr>
                    <div class="form-group">
                        <p class="centrar">IMAGENES</p>
                        <input type="file" name="image[]" id="">
                        <input type="file" name="image[]" id="">
                        <input type="file" name="image[]" id="">
                        <input type="file" name="image[]" id="">
                        <p><small>Maximo 4 imagenes</small></p>
                    </div>
                    <div class="flex"><button type="submit" class="btn send-button">Enviar</button></div>

                    <div class="flex"><a href="#" class="btn"><small>Limpiar formulario</small></a></div>
                </form>
            </div>

        </div>
    </div>



    <%- include('../../partials/footer') %>

</body>

</html>