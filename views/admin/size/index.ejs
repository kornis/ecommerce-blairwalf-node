<%- include('../../partials/html_header') %>


<link rel="stylesheet" href='/css/admin-styles.css'>
<link rel="stylesheet" href='/css/admin-side-column.css'>

<title>BW Blairwalf | ABM Talles</title>


</header>

<body>
    <%- include('../../partials/header') %>
    <div class="container-fluid">
        <div class="row">

            <%- include('../../partials/side-column') %>

            <div class="col">
                <p class="centrar">Administraci√≥n de talles</p>
                <% if(typeof message !== 'undefined'){ %>>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= message %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                <% if(typeof message_error !== 'undefined') { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= message_error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                <a href="/admin/talle" class="btn send-button mb-3">Crear nuevo Talle</a>
                <% if(typeof sizes === 'undefined') { %>
                <h3>NO HAY TALLES PARA MOSTRAR</h3>
                <% } else { %>
                <% for(const size of sizes){ %>
                <div class="product-detail-content mb-2">
                    <div class="flex justify-content-between adm-title-data">
                        <a href="#"><%= size.name %></a>
                        <span>
                            <a href="/admin/talle/<%= size.id %>">Modificar</a>
                            <form action="/admin/talle/<%= size.id %>?_method=DELETE" method="POST">
                                <button> Eliminar </button>
                            </form>
                        </span>
                    </div>
                    <div class="abm-description-col">
                        <p class="push-right p-nomargin"><small><%= size.updatedAt %></small></p>
                    </div>
                </div>
                <% }} %>
            </div>
        </div>


        <%- include('../../partials/footer') %>


        <script src='/js/alerts.js'></script>
</body>

</html>